<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<!--
    @Bean
    public MemberService memberService() {
        return new MemberServiceImpl(memberRepository());
    }
-->
    <bean id="memberService" class="yoongeonung.springbasic.member.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository" />
    </bean>

<!--
    @Bean
    public MemoryMemberRepository memberRepository() {
        return new MemoryMemberRepository();
    }
-->
    <bean id="memberRepository" class="yoongeonung.springbasic.member.MemoryMemberRepository" />

    <bean id="discountPolicy" class="yoongeonung.springbasic.order.RateDiscountPolicy"/>

    <bean id="orderService" class="yoongeonung.springbasic.order.OrderServiceImpl">
        <constructor-arg name="discountPolicy" ref="discountPolicy"/>
        <constructor-arg name="memberRepository" ref="memberRepository" />
    </bean>

</beans>