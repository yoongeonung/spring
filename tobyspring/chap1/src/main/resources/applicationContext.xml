<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost/tobyspring" />
        <property name="username" value="root" />
        <property name="password" value="00000000" />
    </bean>

<!--    <bean class="user.dao.DConnectionMaker" id="connectionMaker" />-->

    <bean id="userDao" class="user.dao.UserDaoJdbc">
        <property name="dataSource" ref="dataSource" />
    </bean>
    
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

<!--    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">-->
<!--        <property name="host" value="mail.server.com"/>-->
<!--    </bean>-->
    <bean id="mailSender" class="user.service.DummyMailSender"/>

    <bean id="userService" class="user.service.UserService">
        <property name="userDao" ref="userDao" />
        <property name="transactionManager" ref="transactionManager" />
        <property name="mailSender" ref="mailSender" />
    </bean>


</beans>